{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./server",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "tests/**/*",
        "src/**/*.json",
        "src/**/*",
        "index.ts"
 ]
}